var app = angular.module('jiujitsmi', ['ngRoute', 'ng-token-auth', 'dndLists', 'ui.bootstrap']);

app.config(['$routeProvider', '$authProvider', function($routeProvider, $authProvider) {
  $routeProvider.
    when('/', {
      templateUrl: "<%= asset_path('landing_page/index.html') %>",
      controller: 'LandingPageCtrl'
    }).
    when('/home', {
      templateUrl: "<%= asset_path('home_page/home.html') %>",
      controller: 'HomePageCtrl'
    })

  $authProvider.configure({
      apiUrl: "<%= ENV['URL']%>" || 'http://localhost:3000' 
  })
}]);