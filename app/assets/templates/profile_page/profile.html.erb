<navbar></navbar>
  <!-- SIDE NAV -->
  <nav class="navbar-inverse navbar homenav snav">
    <ul ng-class="posCol" class="newbrand">
      <a href="/#/" >
        <img class="navbar-brand" id="brand" src="<%= image_path('newlogo.png') %>">
      </a>
    </ul>
    <ul ng-class="posCol" class="addposition">
    </ul>
    <ul ng-class="posCol" 
    class="nav navbar-nav side-nav"> 
      <li ng-click="switchToProfile()">
         <span class="position-a position-b" ><span class="profile-list" >PROFILE DETAILS</span> 
      </li>
      <li ng-click="switchToSub()">
         <span class="position-a position-b" ><span class="profile-list" >MEMBERSHIP DETAILS</span> 
      </li>
    </ul>
  </nav>

  <div>
    <!-- PROFILE DETAILS -->
    <div ng-show="showProfile" class="profile-details col-sm-8 col-xs-12">
      <h3>MY ACCOUNT - PROFILE</h3>
      <div ng-show="updateSuccess" class="profile-update-alert alert alert-success" id="signupFail" role="alert">Account succesfully updated!</div>
      <ul>
      <!-- NAME -->
        <li class="profile-element"><i class="fa fa-user profile-icon"></i><span class="element-span">{{authName}}</span><a ng-click="showName()"href=""class="change-link">Change Name</a>
          <div ng-show="showNameInput">
            <form role="form" ng-submit="editAccount()" >
              <input ng-model='editAccountForm.name' type="text" name="text" class="profile-input profile-input-top" placeholder="Enter your selected name"></input>
              <hr>
              <button type="submit" class="btn1 btn-top btn-lg profile-btn">Update</button>
            </form>
          </div>
        </li>
        <!-- Email -->
        <li class="profile-element"><i class="fa fa-envelope profile-icon"></i><span class="element-span">{{authEmail}}</span><a ng-click="showEmail()"href=""class="change-link">Change Email</a>
          <div ng-show="showEmailInput">
            <div ng-show="updateFail" ng-repeat="errorMessage in errorMessages" class="alert alert-danger" id="signupFail" role="alert">{{ errorMessage }}</div>
            <form role="form" ng-submit="editAccount()" >
              <input ng-model='editAccountForm.email' type="email" name="email" class="profile-input profile-input-top" placeholder="Enter your new email address"></input>
              <hr>
              <button type="submit" class="btn1 btn-top btn-lg profile-btn" >Update</button>
            </form>       
          </div>
        </li>
        <!-- PASSWORD -->
        <li class="profile-element-last"><i class="fa fa-lock profile-icon"></i><span id="pw-block">  ********</span><a ng-click="showPassword()" href=""class="change-link">Change Password</a>
         <div ng-show="showPasswordInput">
          <div ng-show="updateFail" ng-repeat="errorMessage in errorMessages" class="alert alert-danger" id="signupFail" role="alert">{{ errorMessage }}</div>
            <form role="form" ng-submit="editAccount()" >
              <input ng-model='editAccountForm.current_password' type="password" name="current-password" class="profile-input profile-input-top" placeholder="Enter your current password"></input>
              <hr>
              <input ng-model='editAccountForm.password' type="password" name="new-password" placeholder="Enter your new password" class="profile-input"></input>
              <hr>
              <input ng-model='editAccountForm.password_confirmation' type="password" name="confirm-password"  placeholder="Enter your new password again" class="profile-input"></input>
              <hr>
              <button type="submit" class="btn1 btn-top btn-lg profile-btn" >Update</button>
            </form> 
          </div>
        </li>
      </ul>
    </div>

    <!-- MEMBERSHIP DETAILS -->
    <div ng-show="showSub" class="profile-details  col-sm-8 col-xs-12">
      <h3>MY ACCOUNT - MEMBERSHIP</h3>
      <ul>
        <li class="profile-element-last"><i class="fa fa-users profile-icon profile-icon-fix"></i><span class="element-span"> Membership type - <strong>{{authMembershipType}}</strong></span>
        <a href="" ng-really-message="Are you sure you want to delete your account? All your data will be permanantly destroyed." ng-really-click="DestroyAccountBtn()" type="submit" class="change-link">Delete Account</a>
        </li>
      </ul>
    </div>



  </div>

